@model IEnumerable<TilausWebApp.Models.Asiakkaat>

@{
    ViewBag.Title = "Index";
}

<h2>Asiakkaat</h2>

<p>@Html.ActionLink("Luo uusi", "Create")</p>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.AsiakasID)</th>
        <th>@Html.DisplayNameFor(model => model.Nimi)</th>
        <th>@Html.DisplayNameFor(model => model.Osoite)</th>
        @*<th>@Html.DisplayNameFor(model => model.Postitoimipaikat.Postitoimipaikka)</th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@Html.DisplayFor(modelItem => item.AsiakasID)</td>
    <td>@Html.DisplayFor(modelItem => item.Nimi)</td>
    <td>@Html.DisplayFor(modelItem => item.Osoite)</td>
    @*<td>@Html.DisplayFor(modelItem => item.Postitoimipaikat.Postitoimipaikka)</td>*@
    <td>
        @Html.ActionLink("Muokkaa", "Edit", new { id = item.AsiakasID }) |
        @Html.ActionLink("Poista", "Delete", new { id = item.AsiakasID })
        <a class="btn btn-primary" href="~/Asiakkaat/Edit/@item.AsiakasID"
           <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg>
    </td>

</tr>
}

</table>
